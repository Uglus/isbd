<UserControl x:Class="Windows.Views.UserControlJoinSesson"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Windows.Views"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Border Background="#F1CA2C">
            <StackPanel>
                <TextBox x:Name="boxLink" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" materialDesign:HintAssist.Hint="Enter Link:" Height="66"/>
                <Button x:Name="btnJonSesson" Click="btnJonSesson_Click" FontSize="13" Content="JOIN!" Height="42" Margin="200,0,207,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
